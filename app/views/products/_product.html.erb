<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>


<%# When a product has 0 quantity, display a sold out badge on the product list page. %>


  <div>  

    <% if product.quantity==0 %>
      <%= button_to add_item_cart_path(product_id: product.id), class: 'soldout' ,
      method: :post do %>
        <%= 'Sold Out' %> 
      <% end %>
      <%= button_to add_item_cart_path(product_id: product.id), {class: 'disabled' ,
      method: :post },  disabled: true do %>
        <%= fa_icon "shopping-cart", text: 'Add' %> 
       <% end %>
  <% end %>

    <% if product.quantity>0 %>
      <%= button_to add_item_cart_path(product_id: product.id), class: 'btn' ,
      method: :post do %>
        <%= fa_icon "shopping-cart", text: 'Add' %> 
      <% end %>
    <% end %>
  </div>

</article>
